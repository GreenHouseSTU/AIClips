{
  "name": "aiclips",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n next,api -c magenta,cyan \"API_PORT=4000 next dev -p 3000\" \"PORT=4000 node --loader ts-node/esm --no-warnings=ExperimentalWarning src/server.ts\"",
    "dev:next": "API_PORT=4000 next dev -p 3000",
    "dev:server": "PORT=4000 node --loader ts-node/esm --no-warnings=ExperimentalWarning src/server.ts",
    "start": "node dist/server.js",
    "build:server": "tsc -p tsconfig.json",
    "build:next": "next build",
    "build": "npm run build:server && npm run build:next",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.7",
    "next": "^14.2.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/react": "19.2.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
